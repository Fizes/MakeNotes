<UserControl x:Class="MakeNotes.Notebook.Templates.Views.DeleteTabDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ns0="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf" xmlns:ns1="clr-namespace:AmmySidekick;assembly=AmmySidekick" ns1:Ammy.Register="/MakeNotes.Notebook;component/Templates/Views/DeleteTabDialog.g.xaml">
  <StackPanel Margin="20" MaxWidth="260">
    <TextBlock Style="{StaticResource MaterialDesignTitleTextBlock}" Text="Delete tab?"/>
    <TextBlock Style="{StaticResource MaterialDesignSubheadingTextBlock}" Margin="0,12" Text="This will delete the tab. The action cannot be undone" TextWrapping="WrapWithOverflow"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,-6">
      <Button Style="{StaticResource MaterialDesignFlatButton}" Command="{x:Static ns0:DialogHost.CloseDialogCommand}" CommandParameter="True" Content="{StaticResource AcceptButtonText}"/>
      <Button Style="{StaticResource MaterialDesignFlatButton}" Command="{x:Static ns0:DialogHost.CloseDialogCommand}" CommandParameter="False" Content="{StaticResource CancelButtonText}"/>
    </StackPanel>
  </StackPanel>
</UserControl>